# MCP Server Environment Variables
# Copy this file to .env and fill in the values

# Database URL (PostgreSQL with asyncpg driver)
# When running with Docker Compose, this is set automatically
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5433/foxhole_quartermaster

# Scanner Service URL
SCANNER_URL=http://localhost:8001

# MCP Authentication Token (optional, for service-to-service auth)
MCP_AUTH_TOKEN=

# Server Configuration
HOST=0.0.0.0
PORT=8080

# Debug Settings (optional)
DEBUG=false
LOG_LEVEL=info
