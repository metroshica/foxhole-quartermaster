# Database Connection
# For local development with Docker:
DATABASE_URL="postgresql://postgres:postgres@localhost:5433/foxhole_quartermaster"

# For Supabase (production):
# DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT].supabase.co:5432/postgres"

# NextAuth Configuration
# Generate secret with: openssl rand -base64 32
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-here-generate-with-openssl"

# Discord OAuth
# Create a Discord application at https://discord.com/developers/applications
# OAuth2 Redirect URL: http://localhost:3000/api/auth/callback/discord
DISCORD_CLIENT_ID="your-discord-app-id"
DISCORD_CLIENT_SECRET="your-discord-app-secret"

# Optional: Comma-separated list of authorized Discord Guild IDs
# If not set, any guild the user is in can be used
# AUTHORIZED_GUILD_IDS="guild_id_1,guild_id_2"

# Foxhole Stockpiles Scanner Service
SCANNER_URL="http://localhost:8001"

# OpenTelemetry Configuration (for distributed tracing)
# Supports multiple backends: Honeycomb, GCP Cloud Trace, Datadog, Grafana Tempo
# Leave OTEL_EXPORTER_OTLP_ENDPOINT unset to disable tracing
#
# Honeycomb:
# OTEL_EXPORTER_OTLP_ENDPOINT="https://api.honeycomb.io"
# OTEL_EXPORTER_OTLP_HEADERS="x-honeycomb-team=your-api-key"
#
# GCP Cloud Trace:
# OTEL_EXPORTER_OTLP_ENDPOINT="https://cloudtrace.googleapis.com"
# (uses Application Default Credentials)
#
# Datadog:
# OTEL_EXPORTER_OTLP_ENDPOINT="https://trace.agent.datadoghq.com"
# OTEL_EXPORTER_OTLP_HEADERS="DD-API-KEY=your-api-key"
#
# Grafana Tempo:
# OTEL_EXPORTER_OTLP_ENDPOINT="https://tempo.grafana.net"
# OTEL_EXPORTER_OTLP_HEADERS="Authorization=Basic base64-encoded-creds"
#
OTEL_SERVICE_NAME="foxhole-quartermaster"

# Discord Bot Token (from Discord Developer Portal > Bot > Token)
# Used by both the Discord bot AND the web app (for activity channel notifications)
DISCORD_BOT_TOKEN="your-discord-bot-token"

# Discord Bot (Python) Configuration
# These are used by docker-compose when running the Python Discord bot
# See: docker compose --profile bot up
# Google API Key (for Gemini AI)
GOOGLE_API_KEY="your-google-api-key"
# Optional: MCP authentication token for service-to-service auth
MCP_AUTH_TOKEN=""
# Optional: Debug settings
DEBUG="false"
LOG_LEVEL="info"
