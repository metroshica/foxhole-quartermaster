// Prisma Schema for Foxhole Quartermaster
//
// This schema defines the database structure for regiment logistics tracking.
// Key design decisions:
// - Regiment-scoped multi-tenancy: Most entities belong to a specific Discord server (regiment)
// - Flexible item system: Items can be regiment-specific or global (null regimentId)
// - Audit trail: StockpileScan tracks who updated what and when
//
// To apply changes:
//   bun run db:push     # Quick sync (dev only)
//   bun run db:migrate  # Create migration (production)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// Authentication Models (NextAuth.js)
// ============================================================================

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================================================
// User & Regiment Models
// ============================================================================

model User {
  id                  String    @id @default(cuid())
  discordId           String?   @unique  // Optional initially, populated after OAuth
  email               String?   @unique
  emailVerified       DateTime?           // Required by NextAuth Prisma adapter
  name                String?
  image               String?
  selectedRegimentId  String?   // Currently active regiment for this user
  tutorialCompleted   Boolean   @default(false) // Has the user completed the tutorial?
  tutorialCompletedAt DateTime? // When the tutorial was completed
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  accounts                Account[]
  sessions                Session[]
  regimentMembers         RegimentMember[]
  scans                   StockpileScan[]
  operations              Operation[]              @relation("OperationCreator")
  productionOrders        ProductionOrder[]        @relation("ProductionOrderCreator")
  productionContributions ProductionContribution[]

  @@index([discordId])
  @@index([selectedRegimentId])
}

// Regiment configuration - stores Discord server settings and role mappings
model Regiment {
  id           String   @id @default(cuid())
  discordId    String   @unique // Discord Guild/Server ID
  name         String
  icon         String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Role mappings stored as arrays of Discord Role IDs
  // When a user logs in, their roles are checked against these arrays
  adminRoles  String[] // Full access to everything
  editorRoles String[] // Can modify inventory and create operations
  viewerRoles String[] // Read-only access

  members          RegimentMember[]
  items            Item[]
  operations       Operation[]
  productionOrders ProductionOrder[]

  @@index([discordId])
}

// Junction table for user-regiment membership with cached permission level
model RegimentMember {
  id              String          @id @default(cuid())
  userId          String
  regimentId      String
  permissionLevel PermissionLevel
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  regiment Regiment @relation(fields: [regimentId], references: [discordId], onDelete: Cascade)

  @@unique([userId, regimentId])
  @@index([userId])
  @@index([regimentId])
}

enum PermissionLevel {
  ADMIN
  EDITOR
  VIEWER
}

// ============================================================================
// Logistics Models
// ============================================================================


// A specific stockpile location (Seaport or Storage Depot)
model Stockpile {
  id           String        @id @default(cuid())
  regimentId   String
  name         String        // e.g., "Main Storage", "Front Line Cache"
  type         StockpileType
  hex          String        // Foxhole hex name (e.g., "Westgate", "Fisherman's Row")
  locationName String        // City/location within the hex (e.g., "Ivory Hill", "The Spade")
  code         String?       // Optional stockpile access code
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  inventory            Inventory[]
  scans                StockpileScan[]
  items                StockpileItem[]  // Direct item storage from scans
  destinationOperations Operation[]     // Operations targeting this stockpile

  @@unique([regimentId, name])
  @@index([regimentId])
  @@index([hex])
}

// Direct item storage from scanner results
// This stores items by their code (e.g., "Cloth", "HEGrenade") without requiring Item table
model StockpileItem {
  id          String   @id @default(cuid())
  stockpileId String
  itemCode    String   // Scanner item code (e.g., "Cloth", "RifleC")
  quantity    Int      // Number of items (crated items = crates * items per crate)
  crated      Boolean  @default(false)
  confidence  Float?   // OCR confidence from scanner (0-1)
  updatedAt   DateTime @updatedAt

  stockpile Stockpile @relation(fields: [stockpileId], references: [id], onDelete: Cascade)

  @@unique([stockpileId, itemCode, crated])
  @@index([stockpileId])
  @@index([itemCode])
}

enum StockpileType {
  STORAGE_DEPOT
  SEAPORT
}

// Item definitions - can be global (regimentId null) or regiment-specific
// Note: Currently not used - StockpileItem and OperationRequirement use itemCode directly
model Item {
  id           String       @id @default(cuid())
  regimentId   String?      // null = global item available to all regiments
  internalName String       // Canonical name for OCR matching (lowercase, normalized)
  displayName  String       // Human-readable name
  category     ItemCategory
  iconUrl      String?      // Path to item icon image
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  regiment  Regiment?   @relation(fields: [regimentId], references: [discordId], onDelete: Cascade)
  inventory Inventory[]

  @@unique([regimentId, internalName])
  @@index([regimentId])
  @@index([category])
  @@index([internalName])
}

enum ItemCategory {
  SMALL_ARMS       // Rifles, SMGs, pistols
  HEAVY_ARMS       // Machine guns, mortars, AT weapons
  AMMUNITION       // All ammo types
  UTILITY          // Binoculars, radios, wrenches
  MEDICAL          // Bandages, trauma kits, blood plasma
  RESOURCES        // Basic/refined materials, components
  UNIFORMS         // Soldier uniforms, specialist gear
  VEHICLES         // All vehicle types
  STRUCTURES       // Buildable structures, defenses
  SUPPLIES         // Soldier supplies, garrison supplies
}

// Current inventory at a stockpile for a specific item
model Inventory {
  id              String   @id @default(cuid())
  stockpileId     String
  itemId          String
  quantity        Int      // Loose items
  cratedQuantity  Int      @default(0) // Items in crates (usually 3x per crate)
  lastScanId      String?  // Reference to the scan that last updated this
  updatedAt       DateTime @updatedAt

  stockpile Stockpile      @relation(fields: [stockpileId], references: [id], onDelete: Cascade)
  item      Item           @relation(fields: [itemId], references: [id], onDelete: Cascade)
  lastScan  StockpileScan? @relation(fields: [lastScanId], references: [id])

  @@unique([stockpileId, itemId])
  @@index([stockpileId])
  @@index([itemId])
}

// Record of each OCR scan performed on a stockpile
model StockpileScan {
  id            String   @id @default(cuid())
  stockpileId   String
  scannedById   String   // User who performed the scan
  screenshotUrl String?  // Optional: stored screenshot for audit
  ocrConfidence Float?   // Average OCR confidence score (0-1)
  itemCount     Int      @default(0) // Number of items detected
  warNumber     Int?     // Foxhole war number when scan occurred (for leaderboard)
  createdAt     DateTime @default(now())

  stockpile        Stockpile         @relation(fields: [stockpileId], references: [id], onDelete: Cascade)
  scannedBy        User              @relation(fields: [scannedById], references: [id])
  inventoryUpdates Inventory[]
  scanItems        StockpileScanItem[] // Items detected in this scan

  @@index([stockpileId])
  @@index([scannedById])
  @@index([createdAt])
  @@index([warNumber])
}

// Items detected in a specific scan (for audit/history purposes)
model StockpileScanItem {
  id         String  @id @default(cuid())
  scanId     String
  itemCode   String  // Scanner item code (e.g., "Cloth", "RifleC")
  quantity   Int     // Number of items
  crated     Boolean @default(false)
  confidence Float?  // OCR confidence from scanner (0-1)

  scan StockpileScan @relation(fields: [scanId], references: [id], onDelete: Cascade)

  @@index([scanId])
  @@index([itemCode])
}

// ============================================================================
// Operations Planning Models
// ============================================================================

// A planned military operation with equipment requirements
model Operation {
  id                     String          @id @default(cuid())
  regimentId             String
  name                   String
  description            String?
  status                 OperationStatus @default(PLANNING)
  scheduledFor           DateTime?
  scheduledEndAt         DateTime?       // When the operation is expected to end
  location               String?         // Target hex/location
  destinationStockpileId String?         // Where supplies should be delivered
  createdById            String
  createdAt              DateTime        @default(now())
  updatedAt              DateTime        @updatedAt

  regiment             Regiment               @relation(fields: [regimentId], references: [discordId], onDelete: Cascade)
  createdBy            User                   @relation("OperationCreator", fields: [createdById], references: [id])
  destinationStockpile Stockpile?             @relation(fields: [destinationStockpileId], references: [id])
  requirements         OperationRequirement[]

  @@index([regimentId])
  @@index([status])
  @@index([scheduledFor])
  @@index([createdById])
  @@index([destinationStockpileId])
}

enum OperationStatus {
  PLANNING
  ACTIVE
  COMPLETED
  CANCELLED
}

// Equipment requirement for an operation
// Uses itemCode directly (matching StockpileItem pattern) to avoid needing Item table
model OperationRequirement {
  id          String @id @default(cuid())
  operationId String
  itemCode    String // Item code (e.g., "RifleC", "HEGrenade") - matches StockpileItem.itemCode
  quantity    Int
  priority    Int    @default(0) // Higher = more important (0=low, 1=medium, 2=high, 3=critical)

  operation Operation @relation(fields: [operationId], references: [id], onDelete: Cascade)

  @@unique([operationId, itemCode])
  @@index([operationId])
  @@index([itemCode])
}

// ============================================================================
// Production Orders Models
// ============================================================================

enum ProductionOrderStatus {
  PENDING      // Not started
  IN_PROGRESS  // Some items being produced
  COMPLETED    // All items at target quantity
  CANCELLED    // Order cancelled
}

// A production order for items that need to be manufactured
model ProductionOrder {
  id           String                @id @default(cuid())
  regimentId   String
  name         String
  description  String?
  status       ProductionOrderStatus @default(PENDING)
  priority     Int                   @default(0) // 0=low, 1=medium, 2=high, 3=critical
  createdById  String
  createdAt    DateTime              @default(now())
  updatedAt    DateTime              @updatedAt
  completedAt  DateTime?

  regiment      Regiment                @relation(fields: [regimentId], references: [discordId], onDelete: Cascade)
  createdBy     User                    @relation("ProductionOrderCreator", fields: [createdById], references: [id])
  items         ProductionOrderItem[]
  contributions ProductionContribution[]

  @@index([regimentId])
  @@index([status])
  @@index([createdById])
}

// Items within a production order with progress tracking
model ProductionOrderItem {
  id               String   @id @default(cuid())
  orderId          String
  itemCode         String   // e.g., "RifleC", "HEGrenade"
  quantityRequired Int      // Target amount to produce
  quantityProduced Int      @default(0) // Current progress
  updatedAt        DateTime @updatedAt

  order ProductionOrder @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@unique([orderId, itemCode])
  @@index([orderId])
  @@index([itemCode])
}

// ============================================================================
// Contribution Tracking (for Leaderboards)
// ============================================================================

// Tracks individual production contributions for leaderboard scoring
// Each record represents a batch of items produced by a user
model ProductionContribution {
  id        String   @id @default(cuid())
  orderId   String
  itemCode  String   // Item that was produced
  userId    String   // User who made the contribution
  quantity  Int      // Delta: number of items produced in this batch
  warNumber Int      // Foxhole war number (for war-scoped leaderboards)
  createdAt DateTime @default(now())

  order ProductionOrder @relation(fields: [orderId], references: [id], onDelete: Cascade)
  user  User            @relation(fields: [userId], references: [id])

  @@index([orderId])
  @@index([userId])
  @@index([warNumber])
  @@index([createdAt])
}
